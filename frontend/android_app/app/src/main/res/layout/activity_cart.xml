<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.plusbueno.plusbueno.view.CartActivity">

    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:id="@+id/cart_recyclerView"
                                            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2">


    </android.support.v7.widget.RecyclerView>

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="?android:listPreferredItemHeight"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 android:id="@+id/constraintLayout2">

        <Button android:id="@+id/cart_checkout"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CHECKOUT"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView android:id="@+id/cart_total"
                  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$0.0"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="24sp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
